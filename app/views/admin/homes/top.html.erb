<div class="container">
  <div class="row">
  <div class="col-md-1"></div>
  <h3>注文履歴一覧</h3>
  </div>
  
  <div class="row">
    <table class="col-12">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at, admin_order_path(order)  %></td>
          <td><%= order.customer.last_name + order.customer.first_name %></td>
          <td><%= order.order_details.count %></td>
          <td><%= order.status_i18n %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= paginate @orders %>