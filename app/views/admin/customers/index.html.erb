<div class="container">
  <div class="row">
  <div class="col-md-1"></div>
  <h3>会員一覧</h3>
  </div>
  
  <div class="row">
    <table class="col-12">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= cutomer.id  %></td>
          <td><%= link_to customer.name, admin_customer_path(customer.id)%></td>
          <td><%= customer.email %></td>
          <% if customer.is_active == true %>
          <td>有効</td>
          <% else %>
          <td>退会</td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= paginate @customers %>