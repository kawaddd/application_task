<div class="container">
  <div class="row">
  <div class="col-md-1"></div>
  <h3>会員情報編集</h3>
  </div>
  
  <div class="row">
    <div class="col-md-12">
    <%= form_with model: @customer,url: customers_path do |f| %>
      <table>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
        </tr>
      </table>
    <div class="row">
      <%= f.submit '編集内容を保存',class: "btn btn-success col-md-2 offset-sm-3" %>
      <%= link_to '退会する', customers_unsubscribe_path,class: "btn btn-danger col-md-2 offset-sm-1" %>
    </div>
    <% end %>
    </div>
  </div>