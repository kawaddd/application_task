<h3>新規会員登録</h3>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <div class="col-sm-2 offset-sm-1">名前</div>
    <div class="col-sm-4">
      （姓）<%= f.text_field :last_name,placeholder:"令和",class:"form-control" %>
    </div>
    <div class="col-sm-4">
      （名）<%= f.text_field :first_name,placeholder:"道子",class:"form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2 offset-sm-1">フリガナ</div>
    <div class="col-sm-4">
      （セイ）<%= f.text_field :last_name_kana,placeholder:"レイワ",class:"form-control"  %>
    </div>
    <div class="col-sm-4">
      （メイ）<%= f.text_field :first_name_kana,placeholder:"ミチコ",class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 offset-sm-1">メールアドレス</div>
    <div class="col-sm-4">
      <%= f.text_field :email,placeholder:"sample@example.com",class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 offset-sm-1">郵便番号（ハイフンなし）</div>
    <div class="col-sm-4">
      <%= f.text_field :postal_code,placeholder:"0000000",class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-sm-2 offset-sm-1">住所</div>
    <div class="col-sm-8">
      <%= f.text_field :address,placeholder:"東京都渋谷区代々木神園町0-0",class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-sm-2 offset-sm-1">電話番号(ハイフンなし)</div>
    <div class="col-sm-4">
      <%= f.text_field :telephone_number,placeholder:"0000000000",class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-sm-2 offset-sm-1">パスワード（6文字以上）</div>
    <div class="col-sm-4">
      <%= f.password_field :password,class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-sm-2 offset-sm-1">パスワード（確認用）</div>
    <div class="col-sm-4">
      <%= f.password_field :password_confirmation,class:"form-control" %>
    </div>
  </div>
  
  <%= f.submit "新規登録" %>

  <h3>既に登録済みの方</h3>
<% end %>

<%= render "public/shared/links" %>