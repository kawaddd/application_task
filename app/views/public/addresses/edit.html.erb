<div class="container">
  <div class="row">
    <div class="col-md-1">
      <h3>配送先登録/一覧</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= form_with model: @address,url: address_path do |f| %>
        <table>
          <tr>
            <td>郵便番号(ハイフンなし)</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td>宛名</td>
            <td><%= f.text_field :name %></td>
          </tr>
        </table>
      <%= f.submit '変更内容を保存',class: "btn btn-success ml-3 " %>
      <% end %>
    </div>
  </div>
</div>