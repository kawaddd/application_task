<div class="container ">
  <!--<div class="row">-->
  <!--<div class="col-md-1"></div>-->
  <h3>ログイン</h3>
  <!--</div>-->
  
  
  <h5>会員の方はこちらからログイン</h5>
  <div class="row">
    <div class="mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"sample@example.com" %>
        </div>
      
        <div class="field">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      
        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>
    </div>
  </div>
  
  
  <h5>会員登録がお済みでない方</h5>
    <div class="row">
      <div class="mx-auto">
        <%= render "public/shared/links" %>
      </div>
    </div>
</div>